    <CheckBox
        android:id="@+id/radio_intimidation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:onClick="checkButton"
        android:text="@string/Intimidation"
        app:layout_constraintBottom_toTopOf="@+id/radio_investigation"
        app:layout_constraintStart_toStartOf="@+id/radio_investigation" />

    <CheckBox
        android:id="@+id/radio_investigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="8dp"
        android:onClick="checkButton"
        android:text="@string/Investigation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
