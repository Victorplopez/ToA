    <CheckBox
        android:id="@+id/radio_persuasion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:onClick="checkButton"
        android:text="@string/Persuasion"
        app:layout_constraintBottom_toTopOf="@+id/radio_religion"
        app:layout_constraintStart_toStartOf="@+id/radio_religion" />

    <CheckBox
        android:id="@+id/radio_religion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:onClick="checkButton"
        android:text="@string/Religion"
        app:layout_constraintBottom_toTopOf="@+id/radio_slightOfHand"
